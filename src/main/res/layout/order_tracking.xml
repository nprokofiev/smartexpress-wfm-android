<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"

    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Заработок:"
                    android:paddingTop="10dp"
                    android:id="@+id/orderCostLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 руб"
                    android:id="@+id/orderProfit"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Выкуп:"
                    android:paddingTop="10dp"
                    android:id="@+id/orderBuyoutLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="нет"
                    android:id="@+id/orderBuyoutSum"
                    />
                <!-- otkuda -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Откуда везти:"
                    android:id="@+id/sourceAddressLabel"

                    android:textStyle="bold"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="adress"
                        android:id="@+id/sourceAddress"
                        />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Во сколько забрать:"
                    android:paddingTop="10dp"
                    android:id="@+id/pickUpDeadlineLabel"

                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15:45"
                    android:id="@+id/pickUpDeadline"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Партнер(Ресторан):"
                    android:paddingTop="10dp"
                    android:id="@+id/partnerNameLabel"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="МУ-МУ"
                    android:id="@+id/partnerName"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Номер заказа во внешней системе:"
                    android:paddingTop="10dp"
                    android:id="@+id/externalHumanIdLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="МУ-12-12376"
                    android:id="@+id/externalHumanId"
                    />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Содержимое заказа:"
                    android:paddingTop="10dp"
                    android:id="@+id/orderContentsLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Каша гречневая; Морс"
                    android:id="@+id/orderContents"
                    />


            <!-- kuda -->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Куда везти:"
                    android:paddingTop="10dp"
                    android:id="@+id/destinationAddressLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="destination address"
                    android:id="@+id/destinationAddress"
                    />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Во сколько привезти:"
                    android:paddingTop="10dp"
                    android:id="@+id/deadlineLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16:45"
                    android:id="@+id/deliveryDeadline"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Клиент:"
                    android:paddingTop="10dp"
                    android:id="@+id/customerNameLabel"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Николай"
                    android:id="@+id/customerName"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Инкассация:"
                    android:paddingTop="10dp"
                    android:id="@+id/paymentTypeLabel"
                    android:textStyle="bold"/>
            <ListView
                    android:id="@+id/customerCollection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </ListView>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сдача с:"
                    android:paddingTop="10dp"
                    android:id="@+id/changeForLabel"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5000 руб"
                    android:id="@+id/changeFor"
                    />





        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="70dp"
        android:layout_width="fill_parent"
        android:id="@+id/orderTrackingFooter"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Я забрал этот заказ"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_check_white_18dp"
            android:id="@+id/changeOrderStatus"
            />
    </RelativeLayout>
</RelativeLayout>